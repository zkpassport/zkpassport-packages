{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "experimentalDecorators": true,

    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*", "../zkpassport-utils/src/*"],
      "@/components/*": ["./components/*"],
      "@/utils": ["../zkpassport-utils/src/utils"],
      "@/merkle-tree": ["../zkpassport-utils/src/merkle-tree"],
      "@/types": ["../zkpassport-utils/src/types"],
      "@/passport": ["../zkpassport-utils/src/passport"],
      "@/circuits": ["../zkpassport-utils/src/circuits"],
      "@/index": ["../zkpassport-utils/src/index"],
      "@zkpassport/registry": ["../registry-sdk/src/index.ts"],
      "@zkpassport/registry/*": ["../registry-sdk/src/*"],
      "@zkpassport/utils": ["../zkpassport-utils/src/index.ts"],
      "@zkpassport/utils/country": ["../zkpassport-utils/src/country/country.ts"],
      "@zkpassport/utils/types": ["../zkpassport-utils/src/types/index.ts"],
      "@zkpassport/utils/*": ["../zkpassport-utils/src/*"]
    },
    "resolveJsonModule": true,
    "noEmit": true
  },
  "ts-node": {
    "experimentalResolver": true,
    "files": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "../zkpassport-utils"
    },
    {
      "path": "../registry-sdk"
    }
  ]
}
