{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "outDir": "./dist/esm",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "declaration": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "experimentalDecorators": true,

    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*", "../zkpassport-utils/src/*", "../zkpassport-registry/src/*"],
      "@zkpassport/registry": ["../registry-sdk/src/index.ts"],
      "@zkpassport/utils": ["../zkpassport-utils/src/index.ts"],
      "@zkpassport/utils/*": ["../zkpassport-utils/src/*"]
    },
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "../zkpassport-utils"
    },
    {
      "path": "../registry-sdk"
    }
  ]
}
