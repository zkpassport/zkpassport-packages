{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/cjs",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@zkpassport/utils/registry": ["../../node_modules/@zkpassport/utils/dist/esm/registry/index.js"],
      "@zkpassport/utils/types": ["../../node_modules/@zkpassport/utils/dist/esm/types/index.js"],
      "@zkpassport/utils/circuits": ["../../node_modules/@zkpassport/utils/dist/esm/types/index.js"],
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "declaration": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"],
  "references": [
    { "path": "../zkpassport-utils" }
  ]
}
