{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "baseUrl": ".",
    "paths": {
      "@zkpassport/utils": ["../zkpassport-utils/src/index.ts"],
      "@zkpassport/utils/*": ["../zkpassport-utils/src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true
  },
  "include": ["src", "src/**/*.json"],
  "exclude": ["**/*.test.ts"],
  "references": [{ "path": "../zkpassport-utils" }]
}
