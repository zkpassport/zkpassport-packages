{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "declarationDir": "./dist/esm",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@zkpassport/utils": ["../zkpassport-utils/src/index.ts"],
      "@zkpassport/utils/*": ["../zkpassport-utils/src/*"]
    }
  },
  // "include" controls type-checking only; build output is controlled by tsup.config.ts entry points
  "include": ["src/**/*.ts", "src/**/*.json", "tests/**/*.ts", "tsup.config.ts"],
  "references": [{ "path": "../zkpassport-utils" }]
}
