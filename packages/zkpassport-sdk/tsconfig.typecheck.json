{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Disable composite mode to allow standalone type checking
    "composite": false,

    // Skip type checking of all declaration files and imported modules
    "skipLibCheck": true,

    // Allow type checking files outside src/ directory
    "rootDir": null,

    // Set base to packages directory for cross-package path resolution
    "baseUrl": "..",

    // Map package names to source files instead of built declarations
    "paths": {
      "@/*": ["zkpassport-sdk/src/*"],
      "@zkpassport/utils": ["zkpassport-utils/src/index.ts"],
      "@zkpassport/utils/*": ["zkpassport-utils/src/*"],
      "@zkpassport/registry": ["registry-sdk/src/index.ts"],
      "@zkpassport/registry/*": ["registry-sdk/src/*"],
      // Internal paths used by zkpassport-utils
      "@/utils": ["zkpassport-utils/src/utils.ts"],
      "@/types": ["zkpassport-utils/src/types/index.ts"],
      "@/merkle-tree": ["zkpassport-utils/src/merkle-tree/index.ts"],
      "@/merkle-tree/*": ["zkpassport-utils/src/merkle-tree/*"],
      "@/passport/getters": ["zkpassport-utils/src/passport/getters.ts"]
    }
  },
  // Only type check files in this project, not dependencies
  "include": ["src/**/*", "tests/**/*"],
  // "exclude": ["node_modules", "../zkpassport-utils", "../registry-sdk", "../registry-explorer"],
  "references": []
}
