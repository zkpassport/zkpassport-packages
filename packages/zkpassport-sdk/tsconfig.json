{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist/tsc",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@zkpassport/utils": ["../zkpassport-utils/src/index.ts"],
      "@zkpassport/utils/*": ["../zkpassport-utils/src/*"],
      "@zkpassport/registry": ["../registry-sdk/src/index.ts"],
      "@zkpassport/registry/*": ["../registry-sdk/src/*"]
    },
    "declaration": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "composite": true
  },
  "include": ["src", "src/**/*.json"],
  "exclude": ["node_modules", "**/__tests__/*"],
  "references": [{ "path": "../zkpassport-utils" }, { "path": "../registry-sdk" }]
}
