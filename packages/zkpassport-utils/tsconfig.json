{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "outDir": "./dist/esm",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
      // "@/types": ["./types/index"],
      // "@/utils": ["./utils"],
      // "@/passport": ["./passport"],
      // "@/passport/getters": ["./passport/getters"],
      // "@/merkle-tree": ["./merkle-tree/index"],
      // "@/merkle-tree/async-ordered-mt": ["./merkle-tree/async-ordered-mt"],
      // "@/merkle-tree/poseidon2": ["./merkle-tree/poseidon2"],
      // "@/index": ["./index"],
      // "@/circuits": ["./circuits"]
    },
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "composite": true
  },
  "include": ["src/**/*", "src/circuits/sanctions/trees/all_sanctions_tree.json"],
  "exclude": ["src/**/*.test.ts"]
}
