{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "build:types": {
      "outputs": ["dist/**"]
    },
    "dev:build": {
      "dependsOn": ["^dev:build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "check": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}

